{{!
    @template theme_moove/header

    Page header template

    Example context (json): {}
}}


<nav class="fixed-top navbar navbar-light navbar-expand moodle-has-zindex">
    {{#hasdrawertoggle}}
        <div data-region="drawer-toggle" class="d-inline-block mr-3 drawer-toggle">
            <button aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}" aria-controls="nav-drawer" type="button" class="btn nav-link float-sm-left mr-1" data-action="toggle-drawer" data-side="left" data-preference="drawer-open-nav" style="padding-top: 26px;"><i class="slicon-menu"></i><span class="sr-only">{{#str}}sidepanel, core{{/str}}</span></button>
        </div>
    {{/hasdrawertoggle}}

    <img class="eagle" src="/theme/moove/images/orzel.png" alt="Orzeł">
    
    <a href="{{{ config.wwwroot }}}" title="Strona główna" class="navbar-brand {{# output.get_logo }}has-logo{{/ output.get_logo }}
        {{^ output.get_logo }}
            d-none d-sm-inline
        {{/ output.get_logo }}
            ">
        {{# output.get_logo }}
            
        {{/ output.get_logo }}
        {{^ output.get_logo }}
            <span class="site-name d-none d-md-inline">{{{ sitename }}}</span>
        {{/ output.get_logo }}
    </a>

    <ul class="navbar-nav d-none d-md-flex custom-menus">
        <!-- custom_menu -->
        {{{ output.custom_menu }}}
        <!-- page_heading_menu -->
        {{{ output.page_heading_menu }}}
    </ul>
    <ul class="nav navbar-nav ml-auto">
        <div class="d-none d-lg-block">
            {{{ output.search_box }}}
        </div>

        <li class="nav-item lang-menu">
            {{{ output.render_lang_menu }}}
        </li>

        {{{ output.navbar_plugin_output }}}

        {{{ output.user_menu }}}

    </ul>
    
</nav>
<div class="logo-container fixed-top">
    <div class="logo d-sm-inline logo-alignment" style="display: flex !important; justify-content: space-between; border: 0;">
        <a class="is-async-logo" title="IsAsync"  href="/">
            <img class="full-logo" src="{{output.get_logo}}" alt="Logo">
            <img class="mobile-logo" src="{{output.get_logo}}" alt="Mobilne logo">
        </a>
    </div>
</div>